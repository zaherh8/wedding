<div  class="mt-10 text-center ">

<h1 class="text-center text-6xl pt-12">Show Invitee</h1>

<ul>

  <li>
    <strong>First name:</strong>
    <%= @invitee.first_name %>
  </li>

  <li>
    <strong>Last name:</strong>
    <%= @invitee.last_name %>
  </li>

  <li class="hidden">
    <strong>Group:</strong>
    <%= @invitee.group %>
  </li>

  <li>
    <strong>Coming:</strong>
    <%= @invitee.coming %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.invitee_path(@conn, :edit, @invitee) %></span> |
<span><%= link "Back", to: Routes.invitee_path(@conn, :index) %></span>
</div>